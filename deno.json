{
    "workspace": ["./apps/*"],
    "tasks": {
        "nexus::start": "deno task -f @slyng/nexus start",
        "slyng::dev": "deno task -f @slyng/slyng tauri dev"
    },
    "nodeModulesDir": "auto",
    "compilerOptions": {
        "jsx": "precompile",
        "jsxImportSource": "hono/jsx",
        "checkJs": true,
        "strict": true
    },
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "lineWidth": 80,
        "semiColons": true
    },
    "importMap": "./import_map.json",
    "unstable": ["fmt-component", "sloppy-imports"]
}
