{
    "name": "@slyng/slyng",
    "version": "0.1.0",
    "tasks": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "tauri": "tauri"
    },
    "license": "MIT",
    "imports": {
        "@tauri-apps/api": "npm:@tauri-apps/api@^2",
        "@tauri-apps/plugin-opener": "npm:@tauri-apps/plugin-opener@^2",
        "@tauri-apps/plugin-store": "npm:@tauri-apps/plugin-store@^2.2.0",
        "@sveltejs/adapter-static": "npm:@sveltejs/adapter-static@^3.0.6",
        "@sveltejs/kit": "npm:@sveltejs/kit@^2.9.0",
        "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^5.0.0",
        "svelte": "npm:svelte@^5.0.0",
        "svelte-check": "npm:svelte-check@^4.0.0",
        "vite": "npm:vite@^6.0.3",
        "@tauri-apps/cli": "npm:@tauri-apps/cli@^2"
    },
    "exports": {},
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "lineWidth": 80,
        "semiColons": true,
        "proseWrap": "preserve"
    },
    "unstable": ["fmt-component"]
}
